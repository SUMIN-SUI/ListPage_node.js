<%- include('header') %>

<a href="/">데이터 목록</a>
<h1>데이터 수정</h1>
<form method="post">
  <div>
    <label for="id">번호</label> <br />
    <input
      type="number"
      name="id"
      id="id"
      disabled
      value="<%= item.bookid %>"
    />
  </div>
  <div>
    <label for="title">책이름</label> <br />
    <input type="text" name="title" id="title" value="<%= item.bookname %>" />
  </div>
  <div>
    <label for="publisher">출판사</label> <br />
    <input
      type="text"
      name="publisher"
      id="publisher"
      value="<%= item.publisher %>"
    />
  </div>
  <div>
    <label for="price">가격</label> <br />
    <input type="number" name="price" id="price" value="<%= item.price %>" />
  </div>
  <input type="submit" value="완료" />
</form>
